/**
 * Basic
 */

html,
body
  background: #f6f8f8
  color: #393d40

/**
 * Utils
 */

.uc-container
  max-width: 1380px
  width: 100%
  margin: 0 auto

.ant
  &-menu-item
    text-transform: uppercase
  &-text-right
    text-align: right

/**
 * Header
 */

.header
  height: 66px
  background: #ffffff
  border-bottom: 1px solid #e8e8e8
  box-shadow: 0 2px 8px rgba(0,0,0,.15)

/**
 * Slider
 */

.slider
  height: 470px
  padding: 100px 0
  text-align: center
  box-sizing: border-box
  background: url('../img/slider_bg_1.jpg')
  background-size: 600px
  &__title
    color: #ffffff
    font-size: 48px
    font-weight: bold

    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.3)
  &__text
    display: inline-block
    width: 40%

    color: #ffffff
    font-size: 28px
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.3)
  &__button
    border-radius: 0

/**
 * Courses
 */

.courses
  padding: 30px 0
  &__header
    text-align: center
  &__title
    margin: 0
    color: #575a5b
    font: 300 32px 'Roboto', Helvetica, sans-serif
  &__description
    display: inline-block
    width: 50%
    margin: 10px 0 40px 0
    font: 300 18px 'Roboto', Helvetica, sans-serif

.course
  min-height: 160px
  margin: 5px
  padding: 20px
  background: #ffffff
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.3)
  border-radius: 5px
  box-sizing: border-box
  border: 1px solid transparent
  &:hover
    border: 1px solid #21abc7
  &__title
    margin: 0 0 10px 0
    color: #21abc7
    font: 300 24px 'Roboto', Helvetica, sans-serif
  &__text
    margin: 0
    font: 300 15px 'Roboto', Helvetica, sans-serif
  &__link
    display: block
    color: #393d40
  &__link:hover
    color: #393d40
    text-decoration: none
  &__img-container
    text-align: center

/**
 * Reviews
 */

.reviews
  padding: 100px 0
  &__header
    text-align: center
    margin-bottom: 100px
  &__title
    color: #575a5b
    font: 300 32px 'Roboto', Helvetica, sans-serif
  &__body
    font: 300 15px 'Roboto', Helvetica, sans-serif

.review
  padding: 20px
  box-sizing: border-box
  &__body
    min-height: 180px
  &__header
    margin-top: 50px
  &__title
    font: 300 15px 'Roboto', Helvetica, sans-serif

/**
 * Works
 */

.works
  padding: 40px 0
  background: #ffffff
  &__header
    padding-bottom: 100px
    text-align: center
  &__title
    margin: 0
    color: #575a5b
    font: 300 32px 'Roboto', Helvetica, sans-serif

.step
  &__timeline
    border-left: 1px solid #e2e8e9
  &__timeline--right
    text-align: center
    border-left: none
    border-right: 1px solid #e2e8e9
  &__img
    margin: 40px 70px
  &__title,
  &__text
    color: #393d40
    font: 300 32px 'Roboto', Helvetica, sans-serif
  &__text
    font-size: 18px
  &__description
    display: inline-block
    width: 60%

    padding: 0 50px
  &__timeline--circle
    position: relative
    padding-left: 40px
  &__timeline--circle:before
    position: absolute
    content: ""
    width: 20px
    height: 20px
    left: -10px
    top: 5%

    background: #fff
    border: 4px solid #9DB0B5
    border-radius: 50%
  &__timeline--circle--right:before
    left: auto
    right: -9px


/**
 * Page
 */

.article
  margin: 40px 0 !important
  padding: 40px
  background: #ffffff
  border: 1px solid #e2e8e9
  border-radius: 5px
  &__img-container
    text-align: center
  &__img
    width: 80%

.article h1,
.article h2
  font: 300 24px 'Roboto', Helvetica, sans-serif


.article h1
  font-size: 38px

/**
 * Icon
 */

.icon
  padding: 0 10px
  font-size: 20px

/**
 * Params
 */

.params
  &__item
    font-size: 24px
  &__icon
    margin-right: 15px

/**
 * Footer
 */

.footer
  padding: 40px 0
  color: #aebdc1
  background-color: #2d3033
  &__copyright
    padding-top: 20px
  &__copyright-light
    font-weight: 300
  &__about
    position: relative
    padding-left: 25px
    font-weight: 300
    font-size: 15px
  &__about:before
    position: absolute
    content: ''
    left: -1em

    width: 1px
    height: 100%

    background: #47585c

.footer-menu
  &__title
    margin: 0 0 10px 0
    color: #6D7263
    font-size: 13px
    font-weight: bold
  &__body
    margin: 0
    padding: 0

    list-style: none
  &__text
    color: #aebdc1
    font-size: 13px
    font-weight: bold
    transition: color ease .5s
  &__text:hover
    color: #ffffff
    text-decoration: none
